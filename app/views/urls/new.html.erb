<div class="container">
<h1>New Url</h1>
<%= form_for @url, url: urls_path, method: :post do |f| %>

  <div class="form-group">
  <%= f.label :description %>
  <%= f.text_field :description, class:'form-control' %>
  </div>
  <div class="form-group">
  <%= f.label :long_url %>
  <%= f.text_field :long_url, class:'form-control'%>
  </div>

    <%= f.submit class:"btn btn-primary" %>

<% end %>
</div>

